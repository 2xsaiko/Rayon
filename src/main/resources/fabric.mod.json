{
  "schemaVersion": 1,
  "id": "rayon",
  "version": "${version}",
  "name": "Rayon",
  "description": "A physics API for Fabric.",
  "authors": [ "The Lazurite Team" ],

  "contact": {
    "homepage": "https://lazurite.dev",
    "sources": "https://github.com/lazuritemc/Rayon",
    "issues": "https://github.com/LazuriteMC/Rayon/issues"
  },

  "license": "MIT",
  "icon": "assets/rayon/icon.png",
  "accessWidener": "rayon.accesswidener",
  "environment": "*",

  "entrypoints": {
    "main": [ "dev.lazurite.rayon.Rayon" ],
    "client": [ "dev.lazurite.rayon.Rayon" ],
    "cardinal-components-entity": [ "dev.lazurite.rayon.Rayon" ],
    "cardinal-components-world": [ "dev.lazurite.rayon.Rayon" ],
    "modmenu": [
      "dev.lazurite.rayon.impl.util.ui.ModMenuEntry"
    ]
  },
  "mixins": [ "rayon.mixins.json" ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },

  "suggests": { "flamingo": "*" },

  "custom": {
    "modmenu:api": true,
    "cardinal-components": [
      "rayon:rigid_body",
      "rayon:world"
    ]
  }
}
